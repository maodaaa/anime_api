{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "types": ["bun-types"],
    "baseUrl": "./src",
    "paths": {
      "@otakudesu/*": ["anims/otakudesu/*"],
      "@samehadaku/*": ["anims/samehadaku/*"],
      "@configs/*": ["configs/*"],
      "@controllers/*": ["controllers/*"],
      "@helpers/*": ["helpers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@libs/*": ["libs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@scrapers/*": ["scrapers/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
